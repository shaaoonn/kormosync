{
  "name": "kormosync-desktop",
  "private": true,
  "version": "1.0.0",
  "description": "KormoSync Desktop Time Tracker - Employee Monitoring & Productivity Tool",
  "author": "KormoSync <info@kormosync.com>",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc -b --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder --win --config"
  },
  "build": {
    "appId": "com.kormosync.desktop",
    "productName": "KormoSync",
    "copyright": "Copyright Â© 2026 KormoSync",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/uiohook-napi/prebuilds",
        "to": "prebuilds",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "KormoSync-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "shortcutName": "KormoSync"
    },
    "portable": {
      "artifactName": "KormoSync-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-updater": "^6.7.3",
    "firebase": "^12.8.0",
    "idb": "^8.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "styled-components": "^6.3.8",
    "uiohook-napi": "^1.5.4",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/styled-components": "^5.1.36",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
